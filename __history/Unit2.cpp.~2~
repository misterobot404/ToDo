void __fastcall TForm2::Button1Click(TObject *Sender)
{
    ListView1->Items->Add();
	ListView1->Items->Item[count]->Caption = "строка 1";
	ListView1->Items->Item[count]->SubItems->Add(DateTimePicker1->DateTime;);
	++count;
}
